{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2016",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@until-failure-app/*": ["./*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "app/**/*", "./app.d.ts"],
  "exclude": ["node_modules"]
}
